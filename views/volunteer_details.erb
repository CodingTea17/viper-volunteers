<div id="content" class="row">
  <div id="project-col" class=col>
    <div class="card bg-dark">
      <div class="card-header">
        <%= @volunteer.name %>
      </div>
      <div class="card-body">
        <table class="table table-hover table-bordered">
          <thead class="thead">
            <tr>
              <th>Name</th>
              <th>Assigned Project</th>
              <th>Hours</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr class="table-light">
              <td class="align-middle"><%= @volunteer.name %></td>
              <td class="align-middle"><%= Project.find(@volunteer.project_id).title %></td>
              <td class="align-middle"><%= @volunteer.hours %></td>
              <td style="text-align: center;">
                <a href="/volunteer/update/<%= @volunteer.id %>">
                  <button class="btn btn-warning btn-block" type="button">Edit Volunteer</button>
                </a>
              </td>
              <td style="text-align: center;">
                <form action="/volunteer/delete/<%= @volunteer.id %>" method="post">
                  <input name="_method" type="hidden" value="delete">
                  <button class="btn btn-danger btn-block" type="submit">Delete</button>
                </form>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
