<div id="content" class="row">
  <div id="volunteer-col" class=col>
    <div class="card bg-dark">
      <div class="card-header">
        Update Volunteer
      </div>
      <div class="card-body">
        <form action="/volunteer/update/<%= @volunteer.id %>" method="post">
          <input name="_method" type="hidden" value="patch">
          <div class="form-group">
            <label id="volunteer-label" for="name">New Name:</label>
              <input id="volunteer-input" name="name" class="form-control form-control-lg" type="text" value="<%= @volunteer.name %>" required>
          </div>
          <div class="form-group">
            <label id="volunteer-label" for="hours">Hours Worked</label>
              <input id="volunteer-input" name="hours" class="form-control form-control-lg" type="number" value="<%= @volunteer.hours %>" required>
          </div>
          <div class="form-group">
            <label for="project_id">Reassign to a New Project</label>
            <select class="form-control" name='project_id' type='text'>
              <% @projects.each() do |proj| %>
                <option value="<%= proj.id %>"> <%= proj.title %> </option>
              <% end %>
            </select>
          </div>
          <button type="submit" id="create-project" class="btn btn-success btn-lg btn-block">Update Volunteer</button>
        </form>
      </div>
    </div>
  </div>
</div>
